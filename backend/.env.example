# BGC Viewer Environment Configuration Example
# Copy this file to .env and configure for your deployment

# ===== REQUIRED =====

# Secret key for session signing (REQUIRED for production)
# Generate with: python -c "import os; print(os.urandom(24).hex())"
BGCV_SECRET_KEY=your-secret-key-here

# ===== MODE CONFIGURATION =====

# PUBLIC_MODE: Set to 'true' for multi-user web deployment, 'false' for local use
BGCV_PUBLIC_MODE=false

# Data directory (required in PUBLIC_MODE)
BGCV_DATA_DIR=data

# ===== SESSION STORAGE =====

# Redis URL (optional, for production with PUBLIC_MODE)
# If not set or Redis unavailable, falls back to filesystem sessions
REDIS_URL=redis://localhost:6379

# Filesystem session directory (used when Redis not available)
SESSION_DIR=/tmp/bgc_viewer_sessions

# ===== SECURITY =====

# Enable HTTPS-only cookies (set to 'true' in production with HTTPS)
HTTPS_ENABLED=false

# Allowed CORS origins (comma-separated, or * for all)
# Example: https://example.com,https://www.example.com
BGCV_ALLOWED_ORIGINS=*

# ===== SERVER CONFIGURATION =====

# Server host and port
BGCV_HOST=localhost
BGCV_PORT=5005

# Debug mode (set to 'false' in production)
BGCV_DEBUG_MODE=false

# ===== EXAMPLE CONFIGURATIONS =====

# --- Local Development ---
# BGCV_SECRET_KEY=dev-secret-key-do-not-use-in-production
# BGCV_PUBLIC_MODE=false
# BGCV_DEBUG_MODE=true

# --- Production with Redis ---
# BGCV_SECRET_KEY=<generate-random-key>
# BGCV_PUBLIC_MODE=true
# REDIS_URL=redis://localhost:6379
# BGCV_DATA_DIR=/var/lib/bgc_viewer/data
# HTTPS_ENABLED=true
# BGCV_ALLOWED_ORIGINS=https://yourdomain.com
# BGCV_HOST=0.0.0.0
# BGCV_PORT=5005

# --- Production without Redis (Filesystem) ---
# BGCV_SECRET_KEY=<generate-random-key>
# BGCV_PUBLIC_MODE=true
# SESSION_DIR=/var/lib/bgc_viewer/sessions
# BGCV_DATA_DIR=/var/lib/bgc_viewer/data
# HTTPS_ENABLED=true
# BGCV_ALLOWED_ORIGINS=https://yourdomain.com
# BGCV_HOST=0.0.0.0
# BGCV_PORT=5005
