{
  "name": "bgc-viewer-frontend",
  "version": "0.1.15",
  "description": "Frontend assets for BGC Viewer",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web-components": "vite build --config vite.config.webcomponents.js",
    "build:all": "npm run build && npm run build:web-components",
    "preview": "vite preview",
    "build-python": "npm run build && python -m build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "happy-dom": "^12.10.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "d3": "^7.8.5",
    "vue": "^3.3.0"
  }
}
